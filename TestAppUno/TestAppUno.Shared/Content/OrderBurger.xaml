    <!-- 

    ListView 

    Represents a control that displays data items in a vertical stack.

    Link: https://docs.microsoft.com/en-us/uwp/api/Windows.UI.Xaml.Controls.ListView

-->

    <StackPanel VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Button Click="Button_Click" Content="sad"></Button>
        <TextBlock Text="Select your burgers!" FontSize="25"></TextBlock>
        <!-- Item source is where we will get the data to populate the list -->
        <ListView  ItemsSource="{Binding Burgers}"  x:Name="listView" SelectionChanged="ListView_OnSelectionChanged">
            <ListView.Header>
                <StackPanel Padding="30,30,30,0">
                    <TextBlock Text="Burgers" FontSize="20"/>
                </StackPanel>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>

                    <StackPanel Orientation="Horizontal" 
                            Height="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding ImagePath}" VerticalAlignment="Center" Width="100"></Image>
                            <!-- Info -->
                            <StackPanel Orientation="Vertical"
                                VerticalAlignment="Center"
                                Margin="60,0,0,0"
                                Grid.Column="2">
                                <TextBlock Height="48"
                                           Width="48"
                                           Text="{Binding Title}"
                                           VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                <!-- Composition Name -->
                                <TextBlock Text="{Binding Name}"
                                   Style="{ThemeResource BaseTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}" FontWeight="Bold"/>

                                <!-- Artist Name -->
                                <TextBlock Text="{Binding ShortDescription}"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel >
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Page>
